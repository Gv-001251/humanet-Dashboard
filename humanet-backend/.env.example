# MongoDB Atlas Connection
# Replace <db_password> with your MongoDB Atlas password
MONGODB_URI=mongodb+srv://navageevithang_db_user:<db_password>@humanet-cluster.h99gras.mongodb.net/

# Database Name
DB_NAME=humanet_hr

# Server Port
PORT=3001

# Environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# JWT Secrets (replace with secure, random values)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# Email Configuration
# Set to 'true' to enable automatic email notifications for shortlisted candidates
EMAIL_ENABLED=false

# Email Service Configuration
# Option 1: Use a service (gmail, outlook, yahoo, etc.)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=HumaNet HR <your_email@gmail.com>

# Option 2: Use custom SMTP server (uncomment and configure if needed)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# LinkedIn Integration (set LINKEDIN_INTEGRATION_ENABLED=true and provide credentials for live LinkedIn search)
